<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanopy</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitrescanopy</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitrescanopy</object-name>
  </effect>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Curtiss-P40/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.55935 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.41110 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Curtiss-P40/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.16185 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.60868 </z-m>
    </offsets>
  </model>

  <!-- Planches de gauche -->
  <model>
    <path>Aircraft/Curtiss-P40/Models/Interior/Panel/Leftside/leftside.xml</path>
    <offsets>
      <x-m> -1.04024 </x-m>
      <y-m> -0.37307 </y-m>
      <z-m>  0.04840 </z-m>
    </offsets>
  </model>

  <!-- Planches de droite -->
  <model>
    <path>Aircraft/Curtiss-P40/Models/Interior/Panel/Rightside/rightside.xml</path>
    <offsets>
      <x-m> -1.08127 </x-m>
      <y-m>  0.37418 </y-m>
      <z-m>  0.04209 </z-m>
    </offsets>
  </model>

  <!-- THROTTLE -->
  <model>
    <path>Aircraft/Curtiss-P40/Models/Interior/Panel/Instruments/throttle/throttle.xml</path>
    <offsets>
      <x-m> -0.82422 </x-m>
      <y-m> -0.33428 </y-m>
      <z-m>  0.23743 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>AllIntCanopy</name>
    <object-name>intcanopy</object-name>
    <object-name>intvitrescanopy</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>AllIntCanopy</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>AllIntCanopy</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> 0.7 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- COLLIMATOR
  <model>
    <path>Aircraft/Curtiss-P40/Models/Interior/Panel/Instruments/collimator/collimator.xml</path>
    <offsets>
      <x-m> -0.427 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.823 </z-m>
    </offsets>
  </model> -->

</PropertyList>
