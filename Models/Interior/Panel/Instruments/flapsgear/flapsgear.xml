<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>flapsgear.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>Flap.needle</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Cgear.needle</object-name>
    <object-name>FlapGear.face</object-name>

    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Curtiss-P40/Models/Effects/glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>FlapGear.face</object-name>
    <object-name>Flap.needle</object-name>
    <object-name>Lgear.needle</object-name>
    <object-name>Rgear.needle</object-name>
    <object-name>Cgear.needle</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Flap.needle</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.005335 </x-m>
      <y-m> -0.000859 </y-m>
      <z-m>  0.023020 </z-m>
    </center>
    <axis>
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Lgear.needle</object-name>
    <property>gear/gear[0]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.005360 </x-m>
      <y-m> -0.023180 </y-m>
      <z-m>  0.002558 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rgear.needle</object-name>
    <property>gear/gear[1]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m> 0.005388 </x-m>
      <y-m> 0.021840 </y-m>
      <z-m> 0.001694 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Cgear.needle</object-name>
    <property>gear/gear[2]/position-norm</property>
    <factor> 90 </factor>
    <center>
      <x-m>  0.005527 </x-m>
      <y-m>  0.001538 </y-m>
      <z-m> -0.021870 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
