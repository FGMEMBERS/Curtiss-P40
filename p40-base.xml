<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D/FDM), Tomcatter (Instruments)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.8</fuel-fraction>

    <startup>
     <splash-texture>Aircraft/Curtiss-P40/p40-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/Curtiss-P40/Sounds/p40-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Curtiss-P40/Models/p40.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Curtiss-P40/Models/Effects/guns/submodels.xml</path>
    </submodels>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Curtiss P40</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/p40-menu.xml"/>

  </sim>

  <yasim>
    <p40>
      <pilot-lb>180</pilot-lb>
    </p40>
  </yasim>

  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/p40-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Curtiss-P40/Nasal/doors.nas</file>
    </doors>
    <p40>
      <file>Aircraft/Curtiss-P40/Nasal/immat.nas</file>
      <file>Aircraft/Curtiss-P40/Nasal/liveries.nas</file>
      <file>Aircraft/Curtiss-P40/Nasal/light.nas</file>
    </p40>
    <guns>
      <file>Aircraft/Curtiss-P40/Nasal/weapons.nas</file>
      <file>Aircraft/Curtiss-P40/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>

